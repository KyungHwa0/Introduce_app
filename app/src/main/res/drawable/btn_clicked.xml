<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    버튼 백그라운드-->
    <item>
        <shape>
            android:padding="0dp"
            android:shape="rectangle">
            <!-- 버튼 색깔 -->
            <solid android:color="#B1986D" />
            <!-- 네 귀퉁이? 모양 -->
            <corners
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
            <!-- 테두리 색깔 -->
            <stroke
                android:width="1dp"
                android:color="#B1986D" />
        </shape>
    </item>
    <!--    텍스트-->
    <item
        android:width="40dp"
        android:height="40dp"
        android:drawable="@drawable/huk_latte"
        android:gravity="center|left"
        android:left="10dp"/>

    <item
        android:width="40dp"
        android:height="40dp"
        android:drawable="@drawable/huk_latte"
        android:gravity="center|right"
        android:right="10dp"/>
</layer-list>